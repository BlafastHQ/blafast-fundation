{
    "name": "blafasthq/blafast-fundation",
    "description": "This is the technical and functional foundation of the BlaFast ERP",
    "keywords": [
        "blafast",
        "laravel",
        "blafast-fundation"
    ],
    "homepage": "https://github.com/blafasthq/blafast-fundation",
    "license": "MIT",
    "authors": [
        {
            "name": "SÃ©bastien Denooz",
            "email": "sebastien.denooz@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "illuminate/contracts": "^12.0",
        "knuckleswtf/scribe": "^5.0",
        "laravel-json-api/laravel": "^5.0",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0",
        "spatie/laravel-activitylog": "^4.0",
        "spatie/laravel-medialibrary": "^11.0",
        "spatie/laravel-package-tools": "^1.16",
        "spatie/laravel-permission": "^6.24",
        "spatie/laravel-query-builder": "^6.0",
        "spatie/laravel-tags": "^4.10"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/boost": "^2.1",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Blafast\\Foundation\\": "src/",
            "Blafast\\Foundation\\Database\\Factories\\": "database/factories/",
            "Blafast\\Foundation\\Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Blafast\\Foundation\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Blafast\\Foundation\\BlafastServiceProvider"
            ],
            "aliases": {
                "Blafast": "Blafast\\Foundation\\Facades\\Blafast"
            }
        }
    },
    "suggest": {
        "predis/predis": "Required for Redis cache and queue support (^2.0)",
        "laravel/octane": "For higher throughput and performance (^2.0)"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
